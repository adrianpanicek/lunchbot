{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es6",
      "lib": [
        "ES2015",
        "esnext.asynciterable"
      ],
      "allowJs": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "alwaysStrict": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "paths": {
        "@app/*": ["./*"]
      }
    },
    "exclude": [
      "node_modules"
    ]
  }